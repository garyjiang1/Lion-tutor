<p style="color: green"><%= notice %></p>

<h1>Tutors List</h1>

<table class="table table-striped table-bordered table-hover">

<thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Bio</th>
    <th>Rating</th>
  </tr>
</thead>

<% @tutors.each do |tutor| %>
  <tr>
    <td>
        <%= link_to tutor.first_name + ' ' + tutor.last_name, tutor %>
    </td>
    <td><%= tutor.email %></td>
    <td><%= tutor.phone %></td>
    <td><%= tutor.bio %></td>
    <td><%= rand(1..5) %></td>
    <td><%= link_to 'Delete', tutor, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
  </tr>
<% end %>
</table>
<br>

<%= link_to 'Add Another Tutor', new_tutor_path, class:"btn btn-secondary" %>
